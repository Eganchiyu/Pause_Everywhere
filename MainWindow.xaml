<Window
    x:Class="Pause_Everywhere.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pause Everywhere"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowState="Maximized"
    Topmost="True"
    Background="Black">

    <Grid>
        <!-- 底层：旧画面，始终不透明 -->
        <Image x:Name="BackImage"
           Stretch="Fill"
           Opacity="1"/>

        <Image x:Name="FrontImage"
           Stretch="Fill"
           Opacity="0"/>
        <Grid>
            <Image x:Name="BackDrop" Stretch="Fill"/>

            <!-- 变暗遮罩层 -->
            <Rectangle x:Name="DimLayer"
               Fill="Black"
               Opacity="0.25"
               IsHitTestVisible="False"/>
        </Grid>
        <TextBlock
            Text="PAUSE"
            Foreground="White"
            FontSize="96"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0.85"/>
    </Grid>

</Window>
